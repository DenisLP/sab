<p id="notice"><%= notice %></p>

<h1>Listing Insurances</h1>

<table>
  <thead>
    <tr>
      <th>Insurance company</th>
      <th>Policy number</th>
      <th>Claim office</th>
      <th>Phone 1 number</th>
      <th>Phone 2 type</th>
      <th>Phone 2 number</th>
      <th>Phone 3 type</th>
      <th>Phone 3 number</th>
      <th>Adjuster</th>
      <th>Insurance agent</th>
      <th>Deductible</th>
      <th>Claim number</th>
      <th>Claim type</th>
      <th>Type of loss</th>
      <th>Loss date time</th>
      <th>Payer</th>
      <th>Insurer prepaid amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.insurance_company %></td>
        <td><%= insurance.policy_number %></td>
        <td><%= insurance.claim_office %></td>
        <td><%= insurance.phone_1_number %></td>
        <td><%= insurance.phone_2_type %></td>
        <td><%= insurance.phone_2_number %></td>
        <td><%= insurance.phone_3_type %></td>
        <td><%= insurance.phone_3_number %></td>
        <td><%= insurance.adjuster %></td>
        <td><%= insurance.insurance_agent %></td>
        <td><%= insurance.deductible %></td>
        <td><%= insurance.claim_number %></td>
        <td><%= insurance.claim_type %></td>
        <td><%= insurance.type_of_loss %></td>
        <td><%= insurance.loss_date_time %></td>
        <td><%= insurance.payer %></td>
        <td><%= insurance.insurer_prepaid_amount %></td>
        <td><%= link_to 'Show', insurance %></td>
        <td><%= link_to 'Edit', edit_insurance_path(insurance) %></td>
        <td><%= link_to 'Destroy', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

