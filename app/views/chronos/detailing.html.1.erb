<p id="notice"><%= notice %></p>

<h1>Detailing Panel</h1>

<table class='table'>
  <thead>
    <tr>
      <th>PO#</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Exterior color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% i = 123%>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td>0<%= i+= 1%></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.exterior_color %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

